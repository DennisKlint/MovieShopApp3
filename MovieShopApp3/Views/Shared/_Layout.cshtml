<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title MovieApp3</title>
    @Styles.Render("~/Content/css")


</head>
<body ng-app="tabApp">


    <div class="container">

     
        <div class="col-lg-12" >


            <div class="navbar navbar-inverse navbar-fixed-top">


                <div class="container">

                    <div class="navbar-header">

                        <a href="Index.cshtml"><img src="~/Content/graphics/logga.png" title="title" alt="additional title" style="height:40px; width:80px" /></a>
                    </div>
                    <div class="navbar">
                        <ul class="nav navbar-nav" style="color:yellow">
                            <li>@Html.ActionLink("Home", "Index", "Products")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("ProductCategories", "Index", "ProdCats")</li>

                            <li>
                                <li>@Html.ActionLink(" ", "shopingCart", "Products", null, new { @class = "glyphicon  glyphicon glyphicon-shopping-cart" }) </> </li>
                                <li>{{@Session["noOfitems"]}}</li>
                                @* <li id="divtest"> @{Html.RenderAction("PartialViewShopingBasket");}</li>*@

                            </li>
                            <li>@Html.Partial("_LoginPartial")</li>

                            <li>@Html.ActionLink(" ", "shopingCart", "Products", null, new { @class = "glyphicon  glyphicon glyphicon-shopping-cart" }) </> </li>
                            @* <li id="divtest"> @{Html.RenderAction("PartialViewShopingBasket");}</li>*@


                        </ul>


                    </div>
                </div>
            </div>
           
            <div class="container">
          
                <div id="myCarousel" class="carousel slide divCarouselCustom" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Content/graphics/1.jpg" alt="" style="width:100%; height :300px;">
                        </div>
                        <div class="item">
                            <img src="~/Content/graphics/2.jpg" alt="" style="width:100%; height :300px;">
                        </div>
                        <div class="item">
                            <img src="~/Content/graphics/3.jpg" alt="" style="width:100%; height :300px;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">

                <div class="row">
                    @{Html.RenderAction("PartialViewCategories", "Categories");}

                </div>
            </div>


            <div class="container body-content">
                @RenderBody()




            </div>
            @*end div wrapper*@
        </div>
        <br /><br /><br /><br />

        <footer class="navbar-fixed-bottom footerCustom">
            <p>&copy; @DateTime.Now.Year -MovieShop3</p>
        </footer>
    </div>
    <div class="dropdown divDropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Dropdown button
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @Html.ActionLink("Users", "Index", "Manage")<br />
            @Html.ActionLink("Products", "Index", "Products")<br />
            @Html.ActionLink("Categories", "Index", "Categories")<br />
            @Html.ActionLink("ProductCategories", "Index", "ProdCats")

        </div>
    </div>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/MovieShopScripts")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)

</body>
</html>
