<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title MovieApp3</title>
    @Styles.Render("~/Content/css")


</head>
<body ng-app="tabApp">

    <div class="container">
        <div class="col-lg-12">
          
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container" style="margin-left:0 auto">
                    
                    <div class="navbar">
                       
                        <ul class="nav navbar-nav" style="color:yellow">
                            <li>@Html.ActionLink("Home", "Index", "Products")</li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                                }
                            <li>
                                @if (Roles.IsUserInRole("Admin"))
        {
                                 <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Admin menue<span class="caret"></span></a>
                                    <ul class="dropdown-menu">


                                <li>  @Html.ActionLink("Users", "Index", "Users")</li>
                                <li> @Html.ActionLink("Products", "Index", "Products")</li>
                                <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                                <li>@Html.ActionLink("ProductCategories", "Index", "ProdCats")</li>
                                <li>@Html.ActionLink("Orders", "Index", "Orders")</li>

                            </ul>

                        </li>
}

                                <li>@Html.Partial("_LoginPartial")</li>
                                <li style="position:fixed;right:22%">@Html.ActionLink(" ", "shopingCart", "Products", null, new { @class = "glyphicon  glyphicon glyphicon-shopping-cart" }) </li>


                                <li style="position:fixed;right:21%">
                                    <div id="divNoOfItems">{{@Session["noOfitems"]}}</div>
                                </li>
                            </ul>
                    </div>
                </div>
              </div>

            <div class="container" style="margin-top:50px">

                <div id="myCarousel" class="carousel slide divCarouselCustom" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Content/graphics/1.jpg" alt="" style="width:100%; height :400px;">
                        </div>
                        <div class="item">
                            <img src="~/Content/graphics/2.jpg" alt="" style="width:100%; height :400px;">
                        </div>
                        <div class="item">
                            <img src="~/Content/graphics/3.jpg" alt="" style="width:100%; height :400px;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">

                <div class="row">
                    @{Html.RenderAction("PartialViewCategories", "Categories");}

                </div>
            </div>


            <div class="container body-content">
                @RenderBody()

                <br /><br /><br />


            </div>
            @*end div wrapper*@
        </div>
        

        <footer class="navbar-fixed-bottom footerCustom">
            <br/><br/>
            <p>&copy; @DateTime.Now.Year - Stefan & Dennis & CO</p>
        </footer>
    </div>
   





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/MovieShopScripts")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)

</body>
</html>
