@model IEnumerable<MovieShopApp3.Models.Products>

@{
    ViewBag.Title = "shopingCartDetals";
}

<h2>shopingCartDetals</h2>

<p>
    @Html.ActionLink("Back to products", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Article#
        </th>
        <th>
           Title
        </th>
        <th>
            Price
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
       
        <td>
           
            @Html.ActionLink("Remove", "DeleteFromBasket", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "BasketItmDetails", new { id = item.ProductID })
        </td>
    </tr>
}

</table>
