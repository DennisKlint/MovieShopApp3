@model IEnumerable<MovieShopApp3.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Article#
        </th>
        <th>
         Title
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
           In&nbsp;stock
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
           Media
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @if (item.NrInStore > 0)
            {
                <p style="color:limegreen">Yes</p>
            }
            else
            {
                <p style="color:Red">No</p>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @if (item.ProductTypeID == 1)
            {
        <img src="~/Content/graphics/vhs.jpg"  style="height :30px; width :30px"/>
            }
else if (item.ProductTypeID == 2)
{
        <img src="~/Content/graphics/dvd.png"  style="height :30px; width :30px"/>
}
else if (item.ProductTypeID == 3)
{
        <img src="~/Content/graphics/blu-ray-icon-8267.png"  style="height :30px; width :30px"/>
}
        </td>
        <td>
            @Html.ActionLink("Buy", "Purchase", new { id = item.ProductID }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
        </td>
    </tr>
}

</table>
